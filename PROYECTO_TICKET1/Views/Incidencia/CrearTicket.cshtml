@model PROYECTO_TICKET1.Models.Ticket

@{
    ViewData["Title"] = "CrearTicket";
}

<head>
    <link href="~/css/ticket.css" rel="stylesheet" />
</head>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CrearTicket">
            <h2>Formulario de Incidencias</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Asunto" class="control-label"></label>
                <input asp-for="Asunto" class="form-control" />
                <span asp-validation-for="Asunto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea id="descripcion" name="descripcion" placeholder="Escribe aquí una descripción detallada del problema..." required></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sistema" class="control-label"></label>
                <input asp-for="Sistema" class="form-control" />
                <span asp-validation-for="Sistema" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Version" class="control-label"></label>
                <input asp-for="Version" class="form-control" />
                <span asp-validation-for="Version" class="text-danger"></span>
            </div>
            <div class="form-group">
                <form action="http://google.com">
                    <input type="submit" value="Create" class="btn btn-primary" />

                    <a href="@Url.Action("Index","Home")" class="button">Inicio</a>
                </form>
            </div>
        </form>
    </div>
</div>

